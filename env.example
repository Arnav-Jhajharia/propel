# Database
DATABASE_URL=file:./local.db
# For Turso (cloud SQLite) - uncomment and use your credentials
# DATABASE_URL=libsql://your-database-name.turso.io
# DATABASE_AUTH_TOKEN=your-auth-token

# Encryption (REQUIRED for production)
# Generate a strong 32-character key: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-secret-encryption-key-here

# OpenAI / LLMs
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# WhatsApp Business API (Legacy - now stored per-user in database)
# WHATSAPP_TOKEN=your-whatsapp-token
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=dev-verify-token

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# Optional: For production
# NEXTAUTH_URL=https://your-domain.com
# NEXTAUTH_SECRET=your-nextauth-secret

# Clerk (Authentication)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Google Translate API (optional for auto-translate)
GOOGLE_TRANSLATE_API_KEY=
